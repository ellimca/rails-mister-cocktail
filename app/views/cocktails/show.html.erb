<h1>Votre recette <%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %> <%= link_to "Supprimer", dose_path(dose), method: "delete" %></li>
  <% end %>
</ul>
<%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Retour aux cocktails", cocktails_path %>
