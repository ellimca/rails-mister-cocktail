<div class="container">
  <h1 class="mt-4">Votre recette <%= @cocktail.name %></h1>
  <ul class='list-instyled'>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= "#{dose.ingredient.name} : #{dose.description}" %>
        <%= link_to "supprimer", dose_path(dose), method: :delete, class: 'btn btn-primary'  %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
  <%= link_to "Retour aux cocktails" , root_path, class: 'btn btn-primary' %>
</div>
